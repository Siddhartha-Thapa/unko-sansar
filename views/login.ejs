<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Unko Sansar</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body >
    <nav class="bg-cyan-900 w-full h-12 flex justify-around"> 
        <div class="text-xl font-serif text-cyan-100 px-5 py-3 ">
         Unko Sansar
        </div>
        <div class="text-sm font-mono text-white px-5 py-3 ">
         <a href="#">Home</a>
        </div>
        <div class="text-sm font-mono text-white px-5 py-3 ">
         <a href="#order">Order</a>
        </div>
        <div class="text-sm font-mono text-white px-5 py-3 ">
         <a href="#contact">Contact</a>
        </div>
        <div class="flex gap-7">
            <div class="relative inline-block mt-3">
              <a href="/cart/<%= user._id %>">
              <!-- Cart Icon -->
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                  stroke-width="1.5" stroke="currentColor"
                  class="w-8 h-8 text-white">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M2.25 3h1.386a.75.75 0 0 1 .728.568l.383 1.53M7.5 14.25a.75.75 0 1 0 0 1.5.75.75 0 0 0 0-1.5Zm9 0a.75.75 0 1 0 0 1.5.75.75 0 0 0 0-1.5ZM3.75 6h16.5l-1.5 7.5H7.5L6.11 6.568a.75.75 0 0 0-.728-.568H3.75Z" />
              </svg>

              <!-- Notification Badge -->
              <% if (cartcount > 0) { %>
                <span
                  class="absolute -top-2 -right-2 bg-white text-orange-600 text-xs font-bold rounded-full px-2 py-0.5 shadow">
                  <%= cartcount %>
                </span>
              <% } %>
              </a>
            </div>

            <a class="py-2" href="#"><img class="w-6 h-6" src="/images/insta.png" alt=""></a>
            <a class="py-3" href="#"><img class="w-9 h-5" src="/images/fb.png" alt=""></a>
        </div>
        <div class="mt-2">
          <a class="text-sm text-red-500" href="/users/logout">Logout</a>
        </div>
    </nav>
    <div class="w-full ">
        <img src="/images/banner.png" alt="">
    </div>
    <section class="bg-gray-100 scroll-smooth" id="order">
        <div class="w-full font-mono text-7xl text-cyan-800 text-center font-bold py-14">
            ORDER NOW
        </div>
        <br>
        <br>
          <div class="flex items-start gap-30 px-5 w-full  grid grid-cols-3  overflow-hidden ">
            <% products.forEach(function(product){ %>
              <div class=" w-80 h-125 rounded-md shadow-lg">
                  <img class="w-80 h-80 rounded-md border-none" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                     <div class= "text-cyan-900 px-15 py-2">
                        <%= product.name %>
                        <br>
                        <% if(product.discount>0){ %>
                        Price: <s><%= product.price%></s>  <%= product.price - product.discount %>
                        <%}else{ %>
                          Price: <%= product.price %>
                          <%}%>
                        <br>
                        <br>
                        <a href="#" class="text-white bg-blue-500 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 w-40">BUY NOW</a>
                        <br>
                        <br>
                        <a href="/addtocart/<%=product._id%>" class="text-white bg-cyan-900 hover:bg-cyan-700 focus:ring-4 focus:ring-cyan-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-cyan-600 dark:hover:bg-cyan-700 focus:outline-none dark:focus:ring-blue-800 w-40">Add to cart</a>
                        <% if(success.length>0){ %>
                            <div class="absolute top-15 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
                                <span class="inline-block mt-1 mb-1 text-white">
                                    <%= success %>
                                </span>
                            </div>
                        <% } %>
                    </div>

              </div>
               <% }) %>
          </div>
      
        <br>
        <br>
        <br>
       <!-- add products -->
    </section>
    <section id="contact" class="py-16 bg-gray-100 dark:bg-gray-100">
        <div class="w-full font-mono text-7xl text-cyan-800 text-center font-bold py-14">
            CONTACT US
        </div>
  <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-2 gap-10">
    
    <!-- Social Box -->
    <div class="social-box autoBlur bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg">
      <h2 class="text-2xl font-semibold mb-6 text-gray-800 dark:text-gray-200">Contact Information</h2>
      <p class="flex items-center gap-3 text-gray-700 dark:text-gray-300 mb-3">
        <i class='bx bxs-phone text-indigo-600 text-xl'></i> +977 97XXXXXX
      </p>
      <p class="flex items-center gap-3 text-gray-700 dark:text-gray-300 mb-6">
        <i class='bx bx-mail-send text-indigo-600 text-xl'></i> unkosansar@gmail.com
      </p>

      <div class="flex gap-5 mt-4">
        <a href="#" target="_blank" class="text-gray-500 hover:text-gray-900 dark:hover:text-white transition text-2xl">
          <i class='bx bxl-tiktok'></i>
        </a>
        <a href="#" target="_blank" class="text-gray-500 hover:text-blue-600 transition text-2xl">
          <i class='bx bxl-instagram'></i>
        </a>
        <a href="#" target="_blank" class="text-gray-500 hover:text-blue-500 transition text-2xl">
          <i class='bx bxl-facebook-circle'></i>
        </a>
      </div>
    </div>

    <!-- Contact Form -->
    <div class="contact-box autoBlur bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg">
      <form action="https://formspree.io/f/manpwylk" method="POST" class="space-y-6">
        <h2 class="text-2xl font-semibold text-gray-800 dark:text-gray-200">Get in Touch</h2>

        <div>
          <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Full Name</label>
          <input name="name" type="text" placeholder="Your Full Name" required
            class="w-full p-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 focus:ring-2 focus:ring-indigo-500 outline-none">
        </div>

        <div>
          <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Email Address</label>
          <input name="email" type="email" placeholder="Your Email" required
            class="w-full p-3 rounded-xl border border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 focus:ring-2 focus:ring-indigo-500 outline-none">
        </div>

        <div>
          <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Your Message</label>
          <textarea name="message" placeholder="Share your thoughts..." required
            class="w-full p-3 h-32 rounded-xl border border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 focus:ring-2 focus:ring-indigo-500 outline-none"></textarea>
        </div>

        <button type="submit"
          class="w-full flex items-center justify-center gap-2 px-6 py-3 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition font-medium shadow-md">
          Send Message <i class='bx bx-mail-send text-lg'></i>
        </button>
      </form>
    </div>

  </div>
</section>

</body>
<script 
src="https://unpkg.com/aos@next/dist/aos.js">
</script> 
<script > 
AOS.init(); 
</script>
</html>