<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Unko Sansar</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="w-full text-3xl flex justify-between text-cyan-900 font-bold font-serif">My cart <a class="text-red-500 text-xl font-sans" href="/users/login">← Go back</a></div>
    <br>
    <br>
    <div>
        <% if(user.cart.length == 0){ %>
            <div class="w-full text-sm text-center text-cyan-900 ">No items added to cart
                <br>
            <a class="text-blue-500" href="/users/login">← Continue shopping</a>
            <div></div>
        <% } %>
        <% user.cart.forEach(function(item){ %>
            
            <br>
            <div class="flex gap-30">
                <div>
                    <img class=" ml-5 w-40 h-40 shadow-lg" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
                    <div class="text-white bg-cyan-800 ml-5 h-8 text-center"><%= item.name %></div>
                    <div class="flex justify-around text-white bg-cyan-900 ml-5 h-8"><div class="text-sm mt-1 mr-5">Net total</div><div class="text-sm mt-1">Rs <%= item.price - item.discount %></div> </div>
                </div>
                <div >
                    <h1 class="text-2xl font-sans text-cyan-800 font-bold">Price Breakdown</h1>
                    <pre class="text-md font-sans">Original price                    Rs <%= item.price %></pre>
                    
                    <pre class="text-md font-sans">Discount price                   Rs <%= item.discount%></pre>
                    
                    <pre class="text-md font-sans">Platform Fee                      Rs 5</pre>
                    <pre class="text-md font-sans">Shipping cost                    Free(inside valley)</pre>
                    
                    <hr>
                    <span class="text-yellow-800"><pre class="text-md font-sans">Total                                   Rs <%= item.price - item.discount + 5 %></pre> </span>
                    <br>
                    <form action="/cart/remove/<%=item._id%>" method="post">
                        <button class="bg-red-500 text-white w-60 rounded-md h-8">Remove from cart</button>
                    </form>
                </div>
            </div>
            <br>
            <hr>
        <% }) %>
    </div>
    
      <% if(user.cart.length == 0){ %>
           
        <% } else{  %>
    <footer class="w-full h-20 bg-cyan-900 flex justify-between bottom-0 ">
        <div class="text-2xl text-yellow-400 px-5 py-5 ">
            Grand Total: Rs <%= total %>
        </div>
        <div>
            <a href="/users/checkout"> <button class="bg-blue-500 text-white  w-60 rounded-md shadow-lg h-8 mt-5 mr-3"> Proceed to checkout</button></a>
        </div>
    </footer>
    <% } %>
</body>
</html>